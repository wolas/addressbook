- show_company ||= false

.ui-widget-content.widget
  %table{:width => "100%"}
    %tr
      %th User
      %th Phone
      %th Mobile
      %th Email
      - if show_company
        %th Company

    - users.each do |user|
      %tr
        %td{:style => "min-width:100px;"}
          = render :partial => "users/widget", :locals => {:user => user, :surname => true}
        %td= user.phone
        %td= user.mobile
        %td= mail_to user.email
        - if show_company
          %td= link_to user.company.name, user.company
