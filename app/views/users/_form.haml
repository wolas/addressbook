- form_for user, :url => user, :html => {:multipart => true} do |f|

  = error_messages_for :user

  .attribute
    .name= f.label :name, translate('txt.users.attributes.avatar')
    .value= f.file_field :avatar
  .attribute
    .name= f.label :name, translate('txt.users.attributes.company')
    .value= f.collection_select :company_id, Company.all, :id, :name
  .attribute
    .name= f.label :name, translate('txt.users.attributes.name')
    .value= f.text_field :name
  .attribute
    .name= f.label :surname, translate('txt.users.attributes.surname')
    .value= f.text_field :surname
  .attribute
    .name= f.label :email, translate('txt.users.attributes.email')
    .value= f.text_field :email
  .attribute
    .name= f.label :skype, translate('txt.users.attributes.skype')
    .value= f.text_field :skype
  .attribute
    .name= f.label :phone, translate('txt.users.attributes.phone')
    .value= f.text_field :phone
  .attribute
    .name= f.label :mobile, translate('txt.users.attributes.mobile')
    .value= f.text_field :mobile
  .attribute
    .name= f.label :fax, translate('txt.users.attributes.fax')
    .value= f.text_field :fax
  .attribute
    .name= f.label :password
    .value= f.password_field :password
  .attribute
    .name= f.label :password_confirmation
    .value= f.password_field :password_confirmation
  .attribute
    .name= f.label :website
    .value= f.text_field :website
  .attribute
    .name
      = f.label :more_information
      .small
        You can use
        = link_to 'textile', 'http://textism.com/tools/textile/', :target => '_blank'
        here

    .value= f.text_area :more_information, :cols => 50, :rows => 7

  - if admin?
    .attribute
      .name= f.label :admin
      .value= f.check_box :admin

  = f.submit translate('txt.save')
