%h1
  = I18n.t('txt.edit')
  = I18n.t('txt.users.your_account')

- form_for @user, :url => {:controller => :service, :action => :update, :id => @user} do |f|

  = error_messages_for :user

  .attribute
    .name Company
    .value= f.collection_select :company_id, Company.all, :id, :name
  .attribute
    .name= f.label :name, I18n.t('txt.users.attributes.name')
    .value= f.text_field :name
  .attribute
    .name= f.label :surname, I18n.t('txt.users.attributes.surname')
    .value= f.text_field :surname
  .attribute
    .name= f.label :email, I18n.t('txt.users.attributes.email')
    .value= f.text_field :email
  .attribute
    .name= f.label :skype, I18n.t('txt.users.attributes.skype')
    .value= f.text_field :skype
  .attribute
    .name= f.label :phone, I18n.t('txt.users.attributes.phone')
    .value= f.text_field :phone
  .attribute
    .name= f.label :mobile, I18n.t('txt.users.attributes.mobile')
    .value= f.text_field :mobile
  .attribute
    .name= f.label :fax, I18n.t('txt.users.attributes.fax')
    .value= f.text_field :fax

  = f.submit I18n.t('txt.save')
