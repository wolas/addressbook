!!!
%html
  %head
    %title
      = I18n.t('txt.title')
      - if logged_in?
        == - #{current_admin.user(:select => 'name').name}

    = stylesheet_link_tag 'jquery', 'main'
    = javascript_include_tag :defaults
    = javascript_include_tag 'skype'

  %body


    #logo= link_to image_tag('logo.png'), root_url

    #header
      #title= link_to image_tag('title.png'), root_url

      &nbsp;

      = link_to I18n.t('txt.menu.companies'), companies_url
      |
      FOO
      |

      - if logged_in?
        - if admin?
          = link_to I18n.t('txt.menu.files'), files_path
          |
          = link_to I18n.t('txt.menu.admins'), admins_path
          |

        = link_to I18n.t('txt.menu.logout'), logout_url

      - else
        = link_to I18n.t('txt.menu.download'), show_download_files_url
        |
        =link_to I18n.t('txt.menu.change_profile'), service_index_path
        |
        = link_to I18n.t('txt.menu.login'), new_admin_session_path

      #language_form
        - form_tag '' do
          = select_tag("locale", options_for_select(LOCALES_AVAILABLE, I18n.locale), { :index => nil, :onchange => 'this.form.submit()'})



    #flash
      - if notice = flash[:notice]
        .ui-state-highlight.widget
          .flash_controls
            = link_to_function 'x' do |page|
              - page[:flash].visual_effect :blind_up, :duration => 0.5
          %p
            %span{:class => "ui-icon ui-icon-info", :style => "float: left; margin-right: 0.3em;"}
            = notice

      - if error = flash[:error]
        .ui-state-error.widget
          .flash_controls
            = link_to_function 'x' do |page|
              - page[:flash].visual_effect :blind_up, :duration => 0.5
          %p
            %span{:class => "ui-icon ui-icon-alert", :style => "float: left; margin-right: 0.3em;"}
            = error

    .clear
    #content= yield
