!!!
%html
  %head
    %title
      AddressBook
      - if logged_in?
        == - #{current_user.name}

    = stylesheet_link_tag 'jquery', 'main'
    = javascript_include_tag :defaults

  %body
    %br
    #user_badge.ui-widget-content.widget
      = link_to_unless_current 'home', root_url
      |
      = link_to_unless_current 'companies', companies_url
      - if admin?
        |
        = link_to_unless_current 'Roles', roles_path

      %p
        - if logged_in?
          = link_to 'Logout', logout_url
        - else
          = link_to_unless_current 'Log in', new_user_session_path


    .flash
      - if notice = flash[:notice]
        .ui-state-highlight.widget
          %p
            %span{:class => "ui-icon ui-icon-info", :style => "float: left; margin-right: 0.3em;"}
            = notice

      - if error = flash[:error]
        .ui-state-error.widget
          %p
            %span{:class => "ui-icon ui-icon-alert", :style => "float: left; margin-right: 0.3em;"}
            = error

    #content= yield
